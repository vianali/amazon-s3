<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Extension</th>
      <th>Size</th>
      <th>Key</th>
      <th>Attachment</th>
      <th>Mirror Attachment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.name %></td>
        <td><%= picture.file_extension %></td>
        <td><%= picture.file_size %></td>
        <td><%= picture.unique_key %></td>
        <td><%= picture.attachment %></td>
        <td><%= picture.mirror_attachment %></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

